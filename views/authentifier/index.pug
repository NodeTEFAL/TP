doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    title authentification
  body
    header
      // menu de navigation
    .row
      div
        form.col-sm-6.col-sm-offset-3(action='#', name='formInscription', method='post')
          fieldset
            legend Connectez-vous !
            .form-group.row
              label.col-sm-3.col-form-label.input-lg E-mail :
              .col-sm-9
                input.form-control.input-lg(type='email', name='us_login', placeholder='Votre e-mail')
            .form-group.row
              label.col-sm-3.col-form-label.input-lg Mot de passe :
              .col-sm-9
                input.form-control.input-lg(type='password', name='us_password', placeholder='Votre mot de passe')
            .form-group.row
              .col-sm-2.col-sm-offset-8
                button.btn.btn-primary.btn-lg(type='submit', name='validate') Envoyer